<div class="container mt-5">

    <%= simple_form_for(@listing) do |f| %>
    <%= f.input :title, label: "Brand or model", placeholder: "e.g.: Nissan Pickup" %>
    <%= f.input :category, label: "Brand or model", placeholder: "e.g.: Nissan Pickup" %>
    <%= f.input :price, label: "Brand or model", placeholder: "e.g.: Nissan Pickup" %>
    <%= f.input :size, label: "Brand or model", placeholder: "e.g.: Nissan Pickup" %>
    <%= f.input :description, label: "Brand or model", placeholder: "e.g.: Nissan Pickup" %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <div class="btn btn-success">
    <%= f.button :submit %>
    </div>
<% end %>
</div>